doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title Premium Status
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi', crossorigin='anonymous')
    body.bg-black
        nav.navbar.navbar-expand-lg.bg-primary
            .container-fluid
                a.navbar-brand(href='/home')
                    svg.bi.bi-house(xmlns='http://www.w3.org/2000/svg', width='24', height='24', fill='white', viewBox='0 0 16 16')
                        path(fill-rule='evenodd', d='M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z')
                        path(fill-rule='evenodd', d='M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z')
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.mx-auto
                        li.nav-item
                            a.nav-link.active.text-light(href='/movie_search') Movie Search
                    ul.nav.navbar-nav
                        li.nav-item
                            a.nav-link.active.text-light.px-3(href='/cart')
                                svg.bi.bi-cart4(xmlns='http://www.w3.org/2000/svg', width='24', height='24', fill='currentColor', viewBox='0 0 16 16')
                                    path(d='M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z')
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle.active.text-light.btn(aria-expanded='false', href='#', role="button", data-bs-toggle="dropdown" data-bs-display="static", type="button") Account
                            ul.dropdown-menu.dropdown-menu-lg-end
                                li
                                    a.dropdown-item(href='/rentals') My Rentals
                                li
                                    a.dropdown-item(href='/my_fines') My Fines
                                li
                                    a.dropdown-item(href='/wallet') Wallet
                                li
                                    a.dropdown-item(href='/premium') Premium Status
                                li
                                    a.dropdown-item(href='/friends') Friends
                                li
                                    a.dropdown-item(href='/') Logout
                            
        table.table.table-bordered.border-dark.table-sm.table-dark
            thead.table-dark
                tr
                    th(scope='col') Premium Status
                tbody
                    tr.table-active
                        td=account_status.is_premium

        .text-center
            form.add_value(method='get' action='/upgrade_to_premium')
                .text-white
                    div.col-md-1
                        p Price: $50.00
                div.col-md-1
                    button(type='add' class="btn btn-primary") Upgrade to Premium
                    p
                    l= error_msg


    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3', crossorigin='anonymous')