doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title Create Users
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi', crossorigin='anonymous')
    body.bg-black
        nav.navbar.navbar-expand-lg.bg-primary
            .container-fluid
                a.navbar-brand(href='/home_admin')
                    svg.bi.bi-house(xmlns='http://www.w3.org/2000/svg', width='24', height='24', fill='white', viewBox='0 0 16 16')
                        path(fill-rule='evenodd', d='M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z')
                        path(fill-rule='evenodd', d='M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z')
                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.mx-auto
                    ul.nav.navbar-nav
                        li.nav-item.dropdown
                            a.nav-link.dropdown-toggle.active.text-light.btn(aria-expanded='false', href='#', role="button", data-bs-toggle="dropdown" data-bs-display="static", type="button") Tools
                            ul.dropdown-menu.dropdown-menu-lg-end
                                li
                                    a.nav-link.active.bg-gradient(aria-current='page', href='/users') Users
                                li
                                    a.nav-link.active.bg-gradient(aria-current='page', href='/create_users') Create Users
                                li
                                    a.nav-link.active.bg-gradient(href='/overdue_fines') Overdue Fines
                                li
                                    a.nav-link.active.bg-gradient(href='/rentals_list_admin') User Rentals
                                li
                                    a.nav-link.active.bg-gradient(href='/rent_priv') Rent Privileges
                                li
                                    a.nav-link.active.bg-gradient(href='/') Logout
        div(class="h4 pb-2 mb-4 text-black border-bottom border-black text-white") Create A New User
        form(class="create_user row-g-3" method="get" action="/create_user")
            div.col-md-6
                h1
                input(type="username" name="username" class="create_user form-control" placeholder="Username" id="inputUsername" required autofocus)
                p
            div.col-md-6
                input(type="password" name="password" class="create_user form-control" placeholder="Password" id="inputPassword4" required)
                p
            div.col-auto
                div.form-check
                    input(type="checkbox" name="is_admin" class="create_user form-check-input" id="autoSizingCheck" value="1")
                    label.form-check-label.text-white(for="autoSizingCheck") Make Admin?
                    p
            div.col-auto
                button(type="submit" class="btn btn-primary") Create User
                p
                .text-white
                    l= error_msg
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3', crossorigin='anonymous')